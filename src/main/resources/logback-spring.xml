<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ✅ 콘솔 기본 스타일 유지 -->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- ✅ GatewayCustomLogger 전용 로그 파일 appender -->
    <appender name="ERRORLOGGER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <!-- 탭 구분 + 예외 포함 -->
            <pattern>%msg%n%ex</pattern>
        </encoder>
    </appender>

    <!-- ✅ 루트 logger (콘솔 출력만 유지) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- ✅ GatewayCustomLogger만 로그 파일로 저장 -->
    <logger name="edu.goorm.gatewayservice.global.logger.GatewayCustomLogger"
      level="INFO"
      additivity="false">
        <appender-ref ref="ERRORLOGGER"/>
    </logger>

</configuration>
